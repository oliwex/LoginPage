<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- JDBC Database connection settings -->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/usersLogin?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC</property>
        <property name="connection.username">root</property>
        <property name="connection.password">pokemon</property>

        <!-- JDBC connection pool settings ... using built-in test pool -->
        <property name="connection.pool_size">9</property>

        <!-- Select our SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property> 

        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
    
        <!-- Echo the SQL to stdout -->
        <property name="show_sql">true</property>
        
        
        <property name="hibernate.hbm2ddl.auto">update</property>

	<!-- Set the current session context -->
	<property name="current_session_context_class">thread</property>

  
    
      
      
        <!-- klasy mapowane -->           
        <mapping class="com.mycompany.loginwithdb.database.structure.User" />   
         
    </session-factory>

</hibernate-configuration>